{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://www.your-company.com/#organization",
      "name": "Your Company Name",
      "url": "https://www.your-company.com",
      "logo": {
        "@type": "ImageObject",
        "url": "https://www.your-company.com/logo.png"
      },
      "description": "Leader in [Industry], optimized for Generative AI search visibility.",
      "sameAs": [
        "https://www.linkedin.com/company/your-company",
        "https://github.com/your-org"
      ]
    },
    {
      "@type": "WebSite",
      "@id": "https://www.your-company.com/#website",
      "url": "https://www.your-company.com",
      "name": "Your Company - Official Site",
      "publisher": {
        "@id": "https://www.your-company.com/#organization"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://www.your-company.com/?s={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  ]
}
